{
    "manifest_version": 3,
    "name": "Amazon Price History Tracker",
    "description": "Puts a CamelCamelCamel price chart right inside the Amazon product page.",
    "version": "0.2.0",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "js": [
                "scripts/content.js"
            ],
            "matches": [
                "https://*.amazon.com/*"
            ]
        }
    ],
    "permissions": [
        "tabs"
    ],
    "icons": {
        "16": "icons/dollar-16x16.png",
        "32": "icons/dollar-32x32.png",
        "48": "icons/favicon.ico",
        "128": "icons/dollar-128x128.png"
    }
}